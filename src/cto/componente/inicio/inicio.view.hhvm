<script>
function filtrarTabela() {
    const busca = document.getElementById('buscarModelo').value.toLowerCase();
    const bairro = document.getElementById('buscarBairro').value.toLowerCase();
    const cidade = document.getElementById('buscarCidade').value.toLowerCase();
    const filtro = document.getElementById('buscarFiltro').value;
    const tabela = document.querySelector('table tbody');
    
    if (!tabela) return;
    
    const linhas = tabela.querySelectorAll('tr');
    linhas.forEach(linha => {
        const texto = linha.textContent.toLowerCase();
        const enderecoColuna = linha.cells[2]?.textContent.toLowerCase() || '';
        const status = linha.querySelector('.status-badge')?.textContent.toLowerCase() || '';
        let mostrar = true;
        
        if (busca && !texto.includes(busca)) {
            mostrar = false;
        }
        
        if (bairro && !enderecoColuna.includes(bairro)) {
            mostrar = false;
        }
        
        if (cidade && !enderecoColuna.includes(cidade)) {
            mostrar = false;
        }
        
        if (filtro === 'ativa' && !status.includes('ativa')) {
            mostrar = false;
        } else if (filtro === 'inativa' && !status.includes('inativa')) {
            mostrar = false;
        }
        
        linha.style.display = mostrar ? '' : 'none';
    });
}

function adicionarCTO() {
    window.location.href = '?_route=adicionar';
}

function editarCTO(id) {
    window.location.href = '?_route=editar&id=' + id;
}

function excluirCTO(id) {
    if (confirm('Tem certeza que deseja deletar esta CTO?')) {
        // Enviar requisi√ß√£o POST para deletar
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '?_route=inicio';
        
        const inputId = document.createElement('input');
        inputId.type = 'hidden';
        inputId.name = 'id_deletar';
        inputId.value = id;
        
        form.appendChild(inputId);
        document.body.appendChild(form);
        form.submit();
    }
}
</script>

