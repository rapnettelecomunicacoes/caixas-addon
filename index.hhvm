// === HANDLER PARA REQUISI√á√ïES AJAX ===
$ajax_action = isset($_GET['ajax']) ? trim($_GET['ajax']) : '';
if (!empty($ajax_action)) {
    header('Content-Type: application/json; charset=utf-8');
    
    if ($ajax_action === 'carregarCtos') {
        // Carregar configura√ß√£o do banco de dados
        require_once $addon_base . '/src/cto/config/database.hhvm';
        
        // Conex√£o com banco de dados
        $conn = @mysqli_connect($Host, $user, $pass, $db_name);
        
        if (!$conn) {
            echo json_encode([
                'erro' => true,
                'mensagem' => 'Erro ao conectar ao banco de dados: ' . mysqli_connect_error()
            ]);
            exit;
        }
        
        mysqli_set_charset($conn, "utf8mb4");
        
        $sql = "SELECT id, nome, endereco, latitude, longitude FROM mp_caixa 
                WHERE latitude IS NOT NULL AND longitude IS NOT NULL 
                AND CAST(latitude AS DECIMAL(10,6)) != 0
                AND CAST(longitude AS DECIMAL(10,6)) != 0
                ORDER BY nome";
        
        $result = mysqli_query($conn, $sql);
        
        if (!$result) {
            echo json_encode([
                'erro' => true,
                'mensagem' => 'Erro ao buscar CTOs: ' . mysqli_error($conn)
            ]);
            mysqli_close($conn);
            exit;
        }
        
        $ctos = [];
        while ($row = mysqli_fetch_assoc($result)) {
            if (!empty($row['latitude']) && !empty($row['longitude']) && !empty($row['nome'])) {
                $ctos[] = [
                    'id' => $row['id'],
                    'nomecaixa' => $row['nome'],
                    'endereco' => $row['endereco'] ?? '',
                    'latitude' => (float)$row['latitude'],
                    'longitude' => (float)$row['longitude']
                ];
            }
        }
        
        mysqli_close($conn);
        
        echo json_encode($ctos, JSON_UNESCAPED_UNICODE);
        exit;
    }
}

